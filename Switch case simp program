#include<iostream>
using namespace std;
int main(){
    
  int amount;
  cout<<"Enter the amount"<<endl;
  cin>>amount;
  int rs100,rs50,rs20,rs10,rs1;
  int n;
  cin>>n;

  

  switch(n){

        case (100):
        rs100=amount/100;
        amount=amount%100;
        cout<<"the no.of 100rs notes in the amounnt is:"<<rs100<<endl;
       

        case (50):
        rs50=amount/50;
        amount=amount%50;
        cout<<"the no.of 50rs notes in the amount is:"<<rs50<<endl;
        

        case (20):
        rs20=amount/20;
        amount=amount%20;
        cout<<"the no.of 20rs notes in the amount is:"<<rs20<<endl;
        
        case (10):
        rs10=amount/10;
        amount=amount%10;
        cout<<"the no.of 10rs notes in the amount is:"<<rs10<<endl;
        
        case (1):
        rs1=amount/1;
        amount=amount%1;
        cout<<"the no.of 1rs notes in the amount is:"<<rs1<<endl;
       

        default:
        cout<<"enter the correct choice"<<endl;
  }
  return 0;
}
  
  







  

